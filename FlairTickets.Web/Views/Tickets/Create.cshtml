@model FlairTickets.Web.Models.Ticket.InputTicketViewModel

@{
    ViewData["Title"] = "Buy ticket";
}

<h2><partial name="_GoBackFAIcon" /> @ViewData["Title"]</h2>

<form asp-action="Create" asp-route-flightId="@Model.FlightDisplay.Id">
    <partial name="_Input" view-data="ViewData" />
</form>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        await Html.RenderPartialAsync("_CheckTicketSeat");
    }
}
@model FlairTickets.Web.Models.Account.UpdateUserViewModel

@{
    ViewData["Title"] = "Account details";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        
        <h2><i class="fa fa-clipboard-user"></i> @ViewData["Title"]</h2>
        <a asp-action="ChangePassword"><i class="fa fa-key"></i> Change password</a>
        <hr />

        <form method="POST">

            @* ModelState Errors. *@
            <div asp-validation-summary="ModelOnly"></div>

            <!-- Chosen Name -->
            <div class="form-group">
                <label asp-for="ChosenName">@Html.DisplayNameFor(model => model.ChosenName)</label>
                <input asp-for="ChosenName" class="form-control" />
                <span asp-validation-for="ChosenName" class="text-danger"></span>
            </div>

            <!-- Full Name -->
            <div class="form-group">
                <label asp-for="FullName">@Html.DisplayNameFor(model => model.FullName)</label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <!-- Document -->
            <div class="form-group">
                <label asp-for="Document">@Html.DisplayNameFor(model => model.Document)</label>
                <input asp-for="Document" class="form-control" />
                <span asp-validation-for="Document" class="text-danger"></span>
            </div>

            <!-- Address -->
            <div class="form-group">
                <label asp-for="Address">@Html.DisplayNameFor(model => model.Address)</label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <!-- Phone number -->
            <div class="form-group">
                <label asp-for="PhoneNumber">@Html.DisplayNameFor(model => model.PhoneNumber)</label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <p class="text-success">@ViewBag.UserMessage</p>

            <hr />

            <!-- Update account -->
            <div class="form-group">
                <a asp-action="UpdateUser" class="btn btn-primary"><i class="fa fa-check"></i> Update account</a>
            </div>

        </form>
    </div>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
@model FlairTickets.Web.Models.Account.ChangePasswordViewModel

@{
    ViewData["Title"] = "Change password";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        
        <h2><i class="fa fa-key"></i> @ViewData["Title"]</h2>
        <a asp-action="Index"><i class="fa fa-clipboard-user"></i> Account details</a>
        <hr />
        
        <div class="row">
            <div class="col-md-8">
                <form method="POST">

                    @* ModelState Errors. *@
                    <div asp-validation-summary="ModelOnly"></div>

                    <!-- Old Password -->
                    <div class="form-group">
                        <label asp-for="OldPassword">@Html.DisplayNameFor(model => model.OldPassword)</label>
                        <input asp-for="OldPassword" type="password" class="form-control" />
                        <span asp-validation-for="OldPassword" class="text-danger"></span>
                    </div>

                    <!-- New Password -->
                    <div class="form-group">
                        <label asp-for="NewPassword">@Html.DisplayNameFor(model => model.NewPassword)</label>
                        <input asp-for="NewPassword" type="password" class="form-control" />
                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                    </div>

                    <!-- Confirm Password -->
                    <div class="form-group">
                        <label asp-for="ConfirmPassword">@Html.DisplayNameFor(model => model.ConfirmPassword)</label>
                        <input asp-for="ConfirmPassword" type="password" class="form-control" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <p class="text-success">@ViewBag.UserMessage</p>

                    <hr />

                    <!-- Update password -->
                    <div class="form-group">
                        <a asp-action="ChangePassword" class="btn btn-primary"><i class="fa fa-check"></i> Update password</a>
                    </div>

                </form>
            </div>
        </div>

    </div>
</div>

@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
@model FlairTickets.Web.Models.Account.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot password";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-4 offset-md-4">
        <form method="POST">

            <div asp-validation-summary="ModelOnly"></div>

            <!-- Email -->
            <div class="form-group">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <!-- Reset password __ Back to login -->
            <div class="form-group">
                <button asp-action="ForgotPassword" class="btn btn-primary">Reset password</button>
                <a asp-action="Login" class="btn btn-success">Back to login</a>
            </div>

        </form>
    </div>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
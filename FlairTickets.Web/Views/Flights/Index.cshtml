@model IEnumerable<FlairTickets.Web.Data.Entities.Flight>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOnly)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TimeOnly)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Origin.ComboName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Destination.ComboName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Airplane.ComboName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Number)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOnly)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TimeOnly)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Origin.ComboName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Destination.ComboName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Airplane.ComboName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

@model FlairTickets.Web.Models.Flight.InputFlightViewModel

@{
    ViewData["Title"] = "Create Flight";
}

<h2><partial name="_GoBackFAIcon" /> Create</h2>

<h4><i class="fa fa-plane"></i> Flight</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <partial name="_Input" />
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $('#OriginAirportId').prepend($('<option>', {
            text: "Select an Origin Airport",
            value: "0",
            selected: "true"
        }));

        $('#DestinationAirportId').prepend($('<option>', {
            text: "Select a Destination Airport",
            value: "0",
            selected: "true"
        }));

        $('#AirplaneId').prepend($('<option>', {
            text: "Select an Airplane",
            value: "0",
            selected: "true"
        }));
    </script>
}

@model IEnumerable<FlairTickets.Web.Models.Flight.IndexRowFlightViewModel>

<table class="table">
    <thead>
        <tr>
            <th><!--icon--></th>
            <th><i class="fa fa-calendar-days"></i> Date</th>
            <th><i class="fa fa-clock"></i> Time</th>
            <th><i class="fa fa-circle-info"></i> Flight</th>
            <th><i class="fa fa-plane-departure"></i> Origin</th>
            <th><i class="fa fa-plane-arrival"></i> Destination</th>
            <th><!--Options--></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <i class="fa fa-plane"></i>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Time)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FlightNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Origin)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Destination)
                </td>
                <td>
                    <a href="/Flights/Details/@item.FlightId" class="btn btn-success">See flight</a>
                </td>
            </tr>
        }
    </tbody>
</table>

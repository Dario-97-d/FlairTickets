@model FlairTickets.Web.Models.Entities.FlightViewModel

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<div class="form-group">
    <label asp-for="Number" class="control-label">Flight number</label>
    <input asp-for="Number" class="form-control" placeholder="Flight number" />
    <span asp-validation-for="Number" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="DateTime" class="control-label">Date and hour</label>
    @if (ViewData["Title"].ToString() == "Create")
    {
        <input asp-for="DateTime" asp-format="{0:dd/MM/yyyy HH:mm}" class="form-control" />
    }
    else
    {
        <input asp-for="DateTime" class="form-control" />
    }
    <span asp-validation-for="DateTime" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="OriginAirportId" class="control-label">Origin airport</label>
    <select asp-for="OriginAirportId" asp-items="Model.ComboAirports" class="form-control"></select>
    <span asp-validation-for="OriginAirportId" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="DestinationAirportId" class="control-label">Destination airport</label>
    <select asp-for="DestinationAirportId" asp-items="Model.ComboAirports" class="form-control"></select>
    <span asp-validation-for="DestinationAirportId" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="AirplaneId" class="control-label">Airplane</label>
    <select asp-for="AirplaneId" asp-items="Model.ComboAirplanes" class="form-control"></select>
    <span asp-validation-for="AirplaneId" class="text-danger"></span>
</div>
<div class="form-group">
    <input type="submit" value="Save" class="btn btn-primary" />
</div>
@model FlairTickets.Web.Models.Flight.DisplayFlightViewModel

<dl class="row">
    
    <!-- Flight number -->
    <dt class="col-sm-4"><i class="fa fa-circle-info"></i> Flight number</dt>
    <dd class="col-sm-8">@Html.DisplayFor(model => model.Number)</dd>
    
    <!-- Date and hour -->
    <dt class="col-sm-4"><i class="fa fa-calendar-days"></i> Date and hour</dt>
    <dd class="col-sm-8">@Html.DisplayFor(model => model.DateTime)</dd>

    <!-- Origin -->
    <dt class="col-sm-4"><i class="fa fa-plane-departure"></i> Origin</dt>
    <dd class="col-sm-8"><img src="https://flagsapi.com/@(Model.DestinationCountryCode2Letters)/shiny/32.png" /> @Html.DisplayFor(model => model.OriginAirport)</dd>

    <!-- Destination -->
    <dt class="col-sm-4"><i class="fa fa-plane-arrival"></i> Destination</dt>
    <dd class="col-sm-8"><img src="https://flagsapi.com/@(Model.DestinationCountryCode2Letters)/shiny/32.png" /> @Html.DisplayFor(model => model.DestinationAirport)</dd>

    <!-- Airplane -->
    <dt class="col-sm-4"><i class="fa fa-plane-up"></i> Airplane</dt>
    <dd class="col-sm-8">@Html.DisplayFor(model => model.Airplane)</dd>

</dl>

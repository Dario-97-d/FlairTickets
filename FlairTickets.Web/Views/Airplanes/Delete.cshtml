@model FlairTickets.Web.Data.Entities.Airplane

@{
    ViewData["Title"] = "Delete Airplane";
}

<h2><partial name="_GoBackFAIcon" /> @ViewData["Title"]</h2>

<h4><i class="fa fa-plane-up"></i> @Model.ComboName</h4>

<div>
    <hr />

    <div class="row">

        <div class="col-md-4">

            <dl class="row">
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Model)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Model)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Seats)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Seats)
                </dd>
            </dl>

        </div>

        <div class="col-md-8">
            <!-- Image -->
            <img src="@Model.PhotoUrl" alt="Image is not available" id="Photo" class="mb-3" style="max-width: 256px; max-height: 256px;" />
        </div>

    </div>
    
    <hr />
    <p>Are you sure you want to delete this Airplane?</p>

    <form asp-action="Delete">
        <button class="btn btn-danger" value="@Model.Id">Delete Airplane</button>
    </form>
</div>
